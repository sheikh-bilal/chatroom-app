<div class="ui huge inverted menu">
  <div class= 'ui container'>
    <%= link_to 'Chatroom', root_path, class: 'item'%>
    <a class="item">
      Messages
    </a>
    <a class="item">
      Friends
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to 'Log Out', logout_path, method: :delete,
              data: {confirm: 'Are you sure?'}, class: 'item'%>
          <%else%>
            <%= link_to 'Log In', login_path, class: 'item' %>
          <%end%>
        </div>
      </div>
      <div class="item">
          <% if logged_in?%>
            <%= link_to 'Log Out',  logout_path, method: :delete, class: 'ui red button'%>
          <%else%>
            <%= link_to 'Log In', login_path, class: 'ui primary button'%>
          <%end%>
      </div>
    </div>
  </div>
</div>
